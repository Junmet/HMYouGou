.search_wrap {
  height: 91rpx;
  display: flex;
  padding: 20rpx;
  margin-bottom: 10rpx;
}
.search_wrap input {
  flex: 1;
  height: 61rpx;
  background-color: #E7E7E7;
  border-radius: 30rpx;
  padding-left: 20rpx;
  color: #6c6c6c;
  font-size: 25rpx;
  line-height: 61rpx;
}
.search_wrap button {
  width: 110rpx;
  height: 61rpx;
  font-weight: 400;
  font-size: 25rpx;
  color: #FFF;
  background-color: var(--themeColor);
  padding: 0;
  line-height: 61rpx;
  margin-left: 15rpx;
}
.search_wrap button:not([size='mini']) {
  min-height: 0;
}
.first_tab {
  padding: 8rpx;
}
.first_tab .goods_item {
  display: flex;
}
.first_tab .goods_item .goods_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .goods_item .goods_img_warp image {
  width: 65%;
}
.first_tab .goods_item .goods_text_warp {
  flex: 3;
}
.first_tab .goods_item .goods_text_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
}
