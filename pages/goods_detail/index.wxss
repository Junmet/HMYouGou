page {
  padding-bottom: 94rpx;
}
.carousel swiper {
  height: 65vw;
  text-align: center;
}
.carousel swiper image {
  width: 60%;
}
.commodity_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.commodity_text {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 5px solid #dedede;
}
.commodity_text .commodity_left {
  flex: 5;
  color: #434343;
  font-size: 28rpx;
  padding: 0 15rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.commodity_text .commodity_right_row {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000;
}
.commodity_text .commodity_right_row .iconfont {
  color: #434343;
}
.commodity_text .commodity_right_row .collect_text {
  color: #434343;
  font-size: 28rpx;
}
.image_text_row .image_title {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 700;
  padding: 20rpx;
}
.btm_tool {
  border-top: 1rpx solid #434343;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 94rpx;
  background-color: #FFF;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #434343;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  background-color: #FCAA23;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 700;
}
.btm_tool .btn_buy {
  flex: 2;
  background-color: #EA4350;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 700;
}
